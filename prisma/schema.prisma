datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}


model Category{
  id Int @id @default(autoincrement())
  name String  
  image String?
  things Things[]
}


model Things{
  id Int @id @default(autoincrement())
  name String
  description String?
  price Decimal @default(0.0)
  image String? 
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
}